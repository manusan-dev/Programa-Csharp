<Window x:Class="ConexionGestionPedidos.Ventana2Actualizar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConexionGestionPedidos"
        mc:Ignorable="d"
        Title="Actualizar cliente" Height="450" Width="800">
    <Grid>
        <TextBox Name="cuadroActualiza" HorizontalAlignment="Left" Margin="370,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="174" RenderTransformOrigin="0.5,0.5" Height="35">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.018"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Nombre de cliente:" HorizontalAlignment="Left" Margin="252,65,0,0" VerticalAlignment="Top" Width="128"/>
        <Button Content="Actualizar nombre del cliente" HorizontalAlignment="Left" Margin="376,110,0,0" VerticalAlignment="Top" Width="167" Height="25" Click="Button_Click"/>

    </Grid>
</Window>
